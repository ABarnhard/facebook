extends ../shared/template
block content
  h2 Profile
  .panel.panel-default
    .panel-body
      .row
        .col-xs-6
          h3= user.name
        .col-xs-6
          h5: a(href='/profile/edit') Update Profile
      .row
        .col-xs-6
          table.table.table-bordered
            tbody
              each prop in Object.keys(user)
                unless prop === 'email' || prop === '_id' || prop === 'password' || prop === 'photo' || prop === 'isPublic' || prop === 'tagline' || prop === 'name'
                  tr
                    td= prop.charAt(0).toUpperCase() + prop.substring(1)
                    td= user[prop]
        .col-xs-6
          .row
            .col-xs-12
              if user.photo
                .photo(style='background-image:url(#{user.photo});')
          .row
            .col-xs-12
              if user.tagline
                h4= user.tagline


