extends ../shared/template
block content
  h2 Edit Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/profile')
        input(type='hidden', name='_method', value='put')
        .form-group
          label Visible?
          .radio
            label
              input.radio(type="radio", name="visible", value="public", checked=user.isPublic)
              span Public
          .radio
            label
              input.radio(type="radio", name="visible", value="private", checked=!user.isPublic)
              span Private
        .form-group
          label(for='name') Name
          input.form-control#name(type='text', name='name', value=user.name, autofocus=true)
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', value=user.email)
        .form-group
          label(for='tagline') Phone
          input.form-control#phone(type='tel', name='phone', value=user.phone, placeholder='xxx-xxx-xxxx')
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo', value=user.photo, placeholder='http://somepic.jpg')
        .form-group
          label(for='tagline') Tagline
          input.form-control#tagline(type='text', name='tagline', value=user.tagline, placeholder='Who\'s awesome? You')
        .form-group
          label(for='facebook') Facebook
          input.form-control#facebook(type='text', name='facebook', value=user.facebook, placeholder='http://facebook.com')
        .form-group
          label(for='twitter') Twitter
          input.form-control#twitter(type='text', name='twitter', value=user.twitter, placeholder='@SoAwesome')
        button.btn.btn-primary(type='submit') Submit
    .col-xs-6

block scripts

